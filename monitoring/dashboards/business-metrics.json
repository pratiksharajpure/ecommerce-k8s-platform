{
  "dashboard": {
    "title": "E-commerce Business Metrics (Killercoda)",
    "tags": ["business", "ecommerce", "killercoda"],
    "panels": [
      {
        "id": 1,
        "title": "Total Orders",
        "type": "stat",
        "targets": [
          {
            "expr": "count(mysql_global_status_queries)",
            "legendFormat": "Orders"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "streamlit_active_users",
            "legendFormat": "Users"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Page Views Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(streamlit_page_views_total[5m])",
            "legendFormat": "{{page}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6}
      },
      {
        "id": 4,
        "title": "Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(streamlit_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6}
      }
    ],
    "refresh": "30s"
  }
}
